<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_partner_bank_form_crypto_cosmos" model="ir.ui.view">
        <field name="name">res.partner.bank.form.crypto.cosmos</field>
        <field name="model">res.partner.bank</field>
        <field name="inherit_id" ref="base.view_partner_bank_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group attrs="{'invisible': [('crypto_provider', '!=', 'cosmos')]}">
                    <group groups="base.group_no_one">
                        <field name="cosmos_offset"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
